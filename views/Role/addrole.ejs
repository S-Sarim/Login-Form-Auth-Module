		.contain {
			margin-bottom: 10px;
		}
		button {
			background-color: slateblue;
			border-radius: 20%;
			border: 1px solid black;
			font-size: 30;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		}
        button:hover{
            background-color: white;
        }
		.fcc-btn {
        background-color: #199319;
        color: white;
        padding: 15px 25px;
        text-decoration: none;
      }
	  a:hover {
            color: black;
            font-size: 200%;
            border-radius: 50%;
        } 
		form {
			padding-top: 20px;
			padding-bottom: 20px;
			width: 30%;
			height: auto;
			display: flex;
			flex-direction: column;
			align-items: center;
			background-color: cadetblue;
			color: beige;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
			border-radius: 10%;
			margin-top: 20px;
		}
		h1 {
			color: seashell;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		}
		.sidebar {
            background-color: #333;
            color: #fff;
            padding: 15px;
            text-align: center;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            display: flex;
            justify-content: space-around;
        }

        .sidebar li {
            margin: 0;
        }

        .sidebar a {
            text-decoration: none;
            color: #fff;
        }

        main {
            padding: 20px;
			background-color: white;
			display: flex;
			align-items: center;
			justify-content: center;
			height: 100vh;
			margin: 0;
        }
		h2{
			margin-top: 20px;
		}
		.centre{
			text-align: center;
			
		}
	</style>
</head>
<body>
	<%- include('../sidebar.ejs') %>

	<main>
		<form action="/roles/addrole" method="POST">
			<h1>Add A Role</h1>
			<div class="contain">
				<label for="rolename">Pick A User role</label><br>
				<input type="text" name="rolename">
			</div>
			<div class="contain">
				<label class="centre"><b>Users</b></label><br>
				<label for="addusers">Add</label>
				<input type="checkbox" name="addusers" value="true">
				<label for="updateusers">Update</label>
				<input type="checkbox" name="updateusers" value="true">
				<label for="deleteusers">Delete</label>
				<input type="checkbox" name="deleteusers" value="true">
				<label for="viewusers">View</label>
				<input type="checkbox" name="viewusers" value="true">
			</div>
			<div class="contain">
				<label class="centre"><b>Role</b></label><br>
				<label for="addrole">Add</label>
				<input type="checkbox" name="addrole" value="true">
				<label for="updaterole">Update</label>
				<input type="checkbox" name="updaterole" value="true">
				<label for="deleterole">Delete</label>
				<input type="checkbox" name="deleterole" value="true">
				<label for="viewrole">View</label>
				<input type="checkbox" name="viewrole" value="true">
			</div>
			<div class="contain">
				<label class="centre"><b>Record</b></label><br>
				<label for="addrecord">Add</label>
				<input type="checkbox" name="addrecord" value="true">
				<label for="updaterecord">Update</label>
				<input type="checkbox" name="updaterecord" value="true">
				<label for="deleterecord">Delete</label>
				<input type="checkbox" name="deleterecord" value="true">
				<label for="viewrecord">View</label>
				<input type="checkbox" name="viewrecord" value="true">
			</div>
			<button>Add</button><br>
			<a class="fcc-btn" href="/roles/rolelist">View Roles</a>
		</form>
		<h2><%= Title %></h2>		
	</main>
</body>